<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:padding="25dp"
    android:gravity="center"
    tools:context=".activities.OnBoardingPage1">


    <ImageView
        android:id="@+id/item_img_onboarding2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/s1"
        android:layout_marginBottom="25dp"
        />


    <TextView
        android:id="@+id/item_txt_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Find Your Passion"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/item_txt_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Browse the available clubs and join them based on your interest !"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:onClick="onClickNextButton"
        android:text="Next"
        android:textColor="@color/black" />


</LinearLayout>